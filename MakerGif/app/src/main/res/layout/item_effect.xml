<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/s5dp"
    android:gravity="center"
    app:cardCornerRadius="@dimen/s3dp"
    app:cardElevation="@dimen/s2dp">

    <FrameLayout
        android:layout_width="@dimen/s80dp"
        android:layout_height="@dimen/s80dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imgeffect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c7111111"
            android:visibility="gone" />
    </FrameLayout>

</android.support.v7.widget.CardView>
