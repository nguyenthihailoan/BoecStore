<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical
"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/s120dp"
        android:layout_height="@dimen/s120dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/s100dp"
            android:layout_height="@dimen/s100dp"
            android:layout_gravity="center"
            android:padding="@dimen/s10dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_audio"
            android:layout_width="@dimen/s60dp"
            android:layout_height="@dimen/s60dp"
            android:layout_gravity="center"
            android:src="@drawable/playaudio_selector" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/s15dp"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_name_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="dfajois"
            android:textColor="@color/colortext"
            android:textSize="@dimen/s24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/s16dp"
                android:gravity="bottom|center"
                android:text="24MB"
                android:textColor="@color/colortext"
                android:textSize="@dimen/s20sp"
                android:layout_marginRight="@dimen/s10dp"
                android:layout_marginLeft="@dimen/s10dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lines="1"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_size"
                android:text="@color/colortext"
                android:textColor="#4ed9ff"
                android:textSize="@dimen/s20sp" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
