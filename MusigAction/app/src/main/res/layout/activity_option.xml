<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="@dimen/size16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/size120dp"
            android:layout_height="@dimen/size120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/size5dp"
            android:layout_marginTop="@dimen/size10dp"
            android:gravity="center"
            android:src="@drawable/ic_launcher"
            android:textColor="#111"
            android:textSize="@dimen/size24sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size15dp"
            android:gravity="center_horizontal"
            android:text="@string/sound_action"
            android:textColor="#b3cdff"
            android:textSize="@dimen/size27sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size30dp"
            android:layout_marginRight="@dimen/size30dp"
            android:background="@drawable/selector_stor"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/option_findphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size40dp"
                    android:layout_height="@dimen/size40dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_findphone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/find_phone"
                    android:textColor="#b9cef9"
                    android:textSize="@dimen/size20sp" />

                <ImageView
                    android:id="@+id/swfindphone"
                    android:layout_width="@dimen/size40dp"
                    android:layout_height="@dimen/size35dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.7"
                    android:src="@drawable/ic_off" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/option_callquickly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size40dp"
                    android:layout_height="@dimen/size40dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_call" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/call_phone"
                    android:textColor="#b9cef9"
                    android:textSize="@dimen/size20sp" />

                <ImageView
                    android:id="@+id/swcallphone"
                    android:layout_width="@dimen/size40dp"
                    android:layout_height="@dimen/size35dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.7"
                    android:src="@drawable/ic_off" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/option_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size40dp"
                    android:layout_height="@dimen/size40dp"
                    android:alpha="0.7"
                    android:src="@drawable/ic_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/size5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/camera"
                    android:textColor="#b9cef9"
                    android:textSize="@dimen/size20sp" />

                <ImageView
                    android:id="@+id/swfindcamera"
                    android:layout_width="@dimen/size40dp"
                    android:layout_height="@dimen/size35dp"
                    android:layout_gravity="center_vertical"
                    android:alpha="0.7"
                    android:src="@drawable/ic_off" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/adslayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50dp"
        android:layout_gravity="bottom">

    </RelativeLayout>
</FrameLayout>
