<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size280dp"
        android:background="@drawable/dialog01"
        android:orientation="vertical"
        android:padding="@dimen/size20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size40dp"
                android:layout_height="@dimen/size40dp"
                android:src="@drawable/ic_call" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/size10dp"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_marginTop="@dimen/size10dp"
                android:text="@string/call_phone"
                android:textColor="#fff"
                android:textSize="@dimen/size20sp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1dp"
            android:background="#6487cc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10dp"
            android:layout_marginTop="@dimen/size20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size30dp"
                android:layout_height="@dimen/size30dp"
                android:src="@drawable/ic_numberphone" />

            <EditText
                android:id="@+id/txtnumberphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_weight="2"
                android:inputType="number"
                android:hint="@string/inputnumber"
                android:textColor="#fff"
                android:textColorHint="#d9d9d9"
                android:textSize="@dimen/size18sp" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size10dp"
                android:background="@drawable/selector_"
                android:gravity="center"
                android:text="..."
                android:textColor="#fff"

                android:textSize="@dimen/size22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1dp"
            android:background="#6487cc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancelcall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size8dp"
                android:layout_marginLeft="@dimen/size5dp"
                android:layout_marginRight="@dimen/size5dp"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background"
                android:gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/size18sp" />

            <TextView
                android:id="@+id/okcall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size8dp"
                android:layout_marginLeft="@dimen/size5dp"
                android:layout_marginRight="@dimen/size5dp"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background"
                android:gravity="center"
                android:text="@string/ok"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/size18sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
