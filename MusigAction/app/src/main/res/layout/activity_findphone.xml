<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog01"
    android:padding="@dimen/size20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size40dp"
                android:layout_height="@dimen/size40dp"
                android:src="@drawable/ic_findphone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size10dp"
                android:text="@string/find_phone"

                android:textColor="#fff"
                android:textSize="@dimen/size20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1dp"
            android:background="#6487cc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10dp"
            android:layout_marginTop="@dimen/size20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size30dp"
                android:layout_height="@dimen/size30dp"
                android:src="@drawable/ic_ring" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size5dp"
                android:text="@string/ring"
                android:textColor="#fff"
                android:textSize="@dimen/size18sp" />

            <TextView
                android:textColor="#fff"
                android:id="@+id/txtring"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10dp"
                android:layout_weight="2"
                android:textSize="@dimen/size17sp" />

            <TextView
                android:background="@drawable/selector_"
                android:gravity="center"
                android:id="@+id/librarymusic"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="..."
                android:textColor="#fff"
                android:textSize="@dimen/size20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1dp"
            android:background="#6487cc" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size10dp"
            android:layout_marginTop="@dimen/size10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size30dp"
                android:layout_height="@dimen/size30dp"
                android:src="@drawable/ic_flash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="@string/flash"
                android:textColor="#fff"
                android:textSize="@dimen/size18sp" />

            <Switch
                android:id="@+id/swflash"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size25dp"
                android:layout_marginLeft="@dimen/size5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size1dp"
            android:background="#6487cc" />

        <LinearLayout
android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/cancelfind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size8dp"
                android:layout_marginLeft="@dimen/size25dp"
                android:layout_marginRight="@dimen/size15dp"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background"
                android:gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/size18sp" />

            <TextView
                android:id="@+id/okfind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size8dp"
                android:layout_marginLeft="@dimen/size15dp"
                android:layout_marginRight="@dimen/size25dp"
                android:layout_marginTop="@dimen/size20dp"
                android:layout_weight="1"
                android:background="@drawable/selector_background"
                android:gravity="center"
                android:text="@string/ok"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/size18sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
