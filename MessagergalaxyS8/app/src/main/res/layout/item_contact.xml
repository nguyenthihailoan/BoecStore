<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/s120dp"
    android:layout_marginLeft="@dimen/s16dp"
    android:layout_marginRight="@dimen/s16dp"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/s10dp"
    android:paddingRight="@dimen/s10dp"
    android:paddingTop="@dimen/s10dp"
    android:weightSum="7.5">

    <ImageView
        android:padding="@dimen/s5dp"
        android:layout_weight="0.5"
        android:visibility="visible"
        android:id="@+id/iv_check"
        android:src="@drawable/ic_no_tick"
        android:layout_width="@dimen/s16dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.7">

        <TextView
            android:id="@+id/tv_ava_contact"
            android:layout_width="@dimen/s70dp"
            android:layout_height="@dimen/s70dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/s5dp"
            android:background="@drawable/background_boder_avatar"
            android:gravity="center"
            android:text="A"
            android:textSize="@dimen/s28sp"
            android:visibility="visible" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar_sms"
            android:layout_width="@dimen/s70dp"
            android:layout_height="@dimen/s70dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <com.galaxy.s8.messagepro.messagergalaxys8.utils.CustomTextViewSanFranciscoDisplayRegular
        android:id="@+id/tv_name_contact"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/s10dp"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="@dimen/s3dp"
        android:text="My mss"
        android:textColor="@color/colorTextBold"
        android:textSize="@dimen/s22sp" />
</LinearLayout>
